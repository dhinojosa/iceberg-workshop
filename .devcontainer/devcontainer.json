{
    "name": "Apache Iceberg Workshop",
    "hostRequirements": {
        "cpus": 4,
        "memory": "16gb"
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest"
        }
    },
    "runArgs": ["--privileged"],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "forwardPorts": [8080, 5005],
    "remoteUser": "vscode"
}
